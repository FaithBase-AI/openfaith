{
  "$schema": "https://opencode.ai/config.json",
  "experimental": {
    "hook": {
      "session_completed": [
        {
          "command": ["afplay", "/System/Library/Sounds/Glass.aiff"]
        }
      ]
    }
  },
  "layout": "stretch",
  "mcp": {
    "context7": {
      "command": ["bunx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true,
      "type": "local"
    },
    "effect-docs": {
      "command": ["bunx", "-y", "effect-mcp"],
      "enabled": true,
      "type": "local"
    }
  }
}
